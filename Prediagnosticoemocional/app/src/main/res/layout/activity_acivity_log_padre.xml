<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_log_padre"
    android:padding="25dp">


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edTxtContraLogPadre"
        app:layout_constraintStart_toStartOf="@+id/edTxtContraLogPadre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/txtVwTituloLoginPadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Inicio de sesi칩n Padre/Tutor"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtVwUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Usuario"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edTxtUserLogPadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwUser"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtVwContrase침a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edTxtUserLogPadre"
        android:text="Contrase침a"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/edTxtContraLogPadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwContrase침a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnIngresoLogPadre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edTxtContraLogPadre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#D55FE6DA"
        android:onClick="onClick"
        android:text="Ingresar" />

    <Button
        android:id="@+id/btnRegresarLoginPadre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/txtVwAutorFoto"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:background="#C9E8C187"
        android:text="Regresar" />

    <TextView
        android:id="@+id/txtVwAutorFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Foto por Joanna Kosinka en Unsplash"
        android:textAlignment="textStart" />


</RelativeLayout>