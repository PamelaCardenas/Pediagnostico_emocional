<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEEE"
    tools:context=".cuentos"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtVWCuentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Cuentos"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCuento1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8C0F9"
        android:text='Cuento 1 ""'
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_below="@id/txtVWCuentos"/>

    <Button
        android:id="@+id/btnCuento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8C0F9"
        android:text='Cuento 2 ""'
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@id/btnCuento1"/>

    <Button
        android:id="@+id/btnRegActividadesPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="regresarActividadesNino"
        android:backgroundTint="#FF9052"
        android:text="Regresar" />
</RelativeLayout>